<?xml version="1.0"?>
<launch>
    <!-- 
    LIMO 시뮬레이션 테스트용 launch 파일
    limo_ackerman.launch를 실행하고 간단한 컨트롤러를 시작합니다.
    -->
    
    <!-- Gazebo 시뮬레이터 실행 -->
    <include file="$(find limo_gazebo_sim)/launch/limo_ackerman.launch">
        <arg name="gui" value="true"/>
        <arg name="rviz" value="true"/>
        <arg name="world_name" value="$(find limo_gazebo_sim)/worlds/limo_track_obstacle.world"/>
    </include>
    
